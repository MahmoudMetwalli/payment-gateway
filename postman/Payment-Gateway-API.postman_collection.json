{
  "info": {
    "name": "Payment Gateway API",
    "description": "Complete API documentation for PCI DSS compliant payment gateway with audit logging",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "",
      "type": "string"
    },
    {
      "key": "api_secret",
      "value": "",
      "type": "string"
    },
    {
      "key": "merchant_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Merchant Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('jwt_token', response.accessToken);",
                  "    pm.environment.set('refresh_token', response.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"merchant_user\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with merchant credentials to get JWT token. Token is automatically saved to environment."
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            },
            "description": "Refresh JWT access token using refresh token"
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for merchants"
    },
    {
      "name": "Tokenization",
      "item": [
        {
          "name": "Tokenize Card",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token_id', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cardNumber\": \"4532015112830366\",\n  \"cvv\": \"123\",\n  \"expiryMonth\": \"12\",\n  \"expiryYear\": \"2025\",\n  \"cardHolderName\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tokenization/tokenize",
              "host": ["{{base_url}}"],
              "path": ["tokenization", "tokenize"]
            },
            "description": "Tokenize card data. Card number is encrypted and a token is returned. PCI DSS compliant - card data never stored in plain text."
          },
          "response": []
        },
        {
          "name": "Detokenize Card",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{token_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tokenization/detokenize",
              "host": ["{{base_url}}"],
              "path": ["tokenization", "detokenize"]
            },
            "description": "Decrypt and retrieve original card data from token. Highly sensitive operation - fully audited per PCI DSS 10.2.7"
          },
          "response": []
        },
        {
          "name": "Get Token Info",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tokenization/token/{{token_id}}",
              "host": ["{{base_url}}"],
              "path": ["tokenization", "token", "{{token_id}}"]
            },
            "description": "Get token metadata without decrypting sensitive data (last 4 digits, expiry, brand)"
          },
          "response": []
        }
      ],
      "description": "Card tokenization endpoints for PCI DSS compliance"
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Create Purchase with Card Data",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('transaction_id', response.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100.50,\n  \"currency\": \"USD\",\n  \"cardData\": {\n    \"cardNumber\": \"4532015112830366\",\n    \"cvv\": \"123\",\n    \"expiryMonth\": \"12\",\n    \"expiryYear\": \"2025\",\n    \"cardHolderName\": \"John Doe\"\n  },\n  \"metadata\": {\n    \"orderId\": \"ORD-12345\",\n    \"description\": \"Test purchase\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/transactions/purchase",
              "host": ["{{base_url}}"],
              "path": ["transactions", "purchase"]
            },
            "description": "Create purchase transaction with raw card data. Card will be tokenized automatically. Transaction processed asynchronously by acquiring bank."
          },
          "response": []
        },
        {
          "name": "Create Purchase with Token",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100.50,\n  \"currency\": \"USD\",\n  \"token\": \"{{token_id}}\",\n  \"metadata\": {\n    \"orderId\": \"ORD-12346\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/transactions/purchase",
              "host": ["{{base_url}}"],
              "path": ["transactions", "purchase"]
            },
            "description": "Create purchase using pre-existing token. Faster and more secure than sending card data."
          },
          "response": []
        },
        {
          "name": "Get Transaction",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/transactions/{{transaction_id}}",
              "host": ["{{base_url}}"],
              "path": ["transactions", "{{transaction_id}}"]
            },
            "description": "Get transaction details by ID"
          },
          "response": []
        },
        {
          "name": "List Transactions",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/transactions?status=AUTHORIZED&page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["transactions"],
              "query": [
                {
                  "key": "status",
                  "value": "AUTHORIZED",
                  "description": "Filter by status: PENDING, AUTHORIZED, FAILED, REFUNDED"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "startDate",
                  "value": "2025-11-01",
                  "disabled": true
                },
                {
                  "key": "endDate",
                  "value": "2025-11-30",
                  "disabled": true
                }
              ]
            },
            "description": "List all transactions with optional filters"
          },
          "response": []
        }
      ],
      "description": "Transaction processing endpoints"
    },
